<h2>Lista de postagens: </h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova postagem</button></a>

{{#each postagens}}
<div class="card mt-3">
    <div class="card-body">
        <h4>Título: {{titulo}}</h4>
        <h5>Conteúdo:</h5>
        <h5 class="card">{{conteudo}}</h5>
        <p>Descrição: {{descricao}}</p>
        <small>Data: {{data}}</small><br>
        <small>Categoria: {{categoria.nome}}</small><br>
        
        
        
        <form action="/admin/postagens/deletar" method="POST">
            <input type="hidden" name="id" value="{{_id}}">
            <button style="float: right;" type="submit" class="btn btn-danger mt-3">Excluir postagem</button>
        </form>

        <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-3" style="float: right 10px;">Editar postagem</button></a>
        {{!-- <h1>Id: {{_id}}</h1> --}}
    </div>
</div>
{{else}}
<p>Nenhuma postagem registrada!</p>
{{/each}}