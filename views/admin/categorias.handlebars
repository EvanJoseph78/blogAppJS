<h2>Lista de categorias: </h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova categoria</button></a>

{{#each categorias}}
<div class="card mt-4">
    <div class="card-body">
        <h4>{{nome}}</h4>
        <small>{{slug}}</small><br>
        <small>{{date}}</small><br>

        <form action="/admin/categorias/deletar" method="POST">
            <input type="hidden" name="id" value="{{_id}}">
            <button style="float: right;" type="submit" class="btn btn-danger mt-3">Exluir categoria</button>
        </form>

        <a href="/admin/categorias/edit/{{_id}}"><button style="float: right 10px;" class="btn btn-success mt-3">Editar categoria</button></a>

    </div>
</div>
{{else}}
<h4 class="mt-3">Nenhuma categoria registrada!</h4>
{{/each}}